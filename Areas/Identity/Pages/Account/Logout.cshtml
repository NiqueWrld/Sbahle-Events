@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <link rel="stylesheet" href="~/css/styles.css" />
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <div class="limiter">
                <div class="container-login100">
                    <div class="wrap-login100">
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <span class="login100-form-title p-b-26">
                                @ViewData["Title"]
                            </span>
                            <span class="login100-form-title p-b-48">
                                <i class="zmdi zmdi-font">
                                    <img src="https://th.bing.com/th/id/OIP.bPIF2O_doURSlTmRbbonLwHaHa?w=626&h=626&rs=1&pid=ImgDetMain" style="width:100px;" alt="Icon">
                                </i>
                            </span>
                            <div class="container-login100-form-btn">
                                <div class="wrap-login100-form-btn">
                                    <div class="login100-form-bgbtn"></div>
                                    <button id="login-submit" type="submit" class="login100-form-btn">
                                        Click here to Logout
                                    </button>
                                </div>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger text-center" role="alert"></div>
                        </form>
                    </div>
                </div>
            </div>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
</header>
