@using Microsoft.AspNetCore.Identity
@using Sbahle_Events.Areas.Identity.Data
@using Microsoft.AspNetCore.Authorization
@inject UserManager<Sbahle_EventsUser> UserManager
@inject SignInManager<Sbahle_EventsUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sbahle Events</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sbahle_Events.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Sbahle Events</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">About</a>
                        </li>
                    </ul>
                    @{
                        if (!User.Identity.IsAuthenticated)
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link btn btn-outline-primary" href="/Identity/Account/Login">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link btn btn-primary ms-2" href="/Identity/Account/Register">Register</a>
                                </li>
                            </ul>
                        }
                        else
                        {
                            if (User.IsInRole("Admin")){
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-primary ms-2" href="#">User Management</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-primary ms-2" href="#">System Settings</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-primary ms-2" href="#">Task Management</a>
                                    </li>
                                </ul>
                            }
                            else if (User.IsInRole("Manager"))
                            {
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-primary ms-2" href="#">Team Dashboard</a>
                                    </li>
                                </ul>
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-primary ms-2" href="#">Task Assignment</a>
                                    </li>
                                </ul>
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-primary ms-2" href="/Identity/Account/Register">Performance Reports</a>
                                    </li>
                                </ul>
                            }
                            else if (User.IsInRole("User"))
                            {
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-primary ms-2" href="#">Task List</a>
                                    </li>
                                </ul>
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-primary ms-2" href="#">Notifications</a>
                                    </li>
                                </ul>
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-primary ms-2" href="#">Profile Settings</a>
                                    </li>
                                </ul>
                            }

                            <ul class="navbar-nav">
                                <!-- Profile Dropdown -->
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle btn btn-outline-primary ms-2" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <!-- User Info (Name and Role) -->
                                        <span id="userName">@User.Identity.Name</span> <!-- Replace with dynamic data -->
                                        
                                            @{
                                                if (User.IsInRole("Admin")) {
                                                <span id="userRole" class="text-muted">Admin</span>
                                                                            }
                                                else if (User.IsInRole("Manager"))
                                                {
                                                <span id="userRole" class="text-muted">Manager</span>
                                                                            }
                                                else if (User.IsInRole("User"))
                                                {
                                                <span id="userRole" class="text-muted">User</span>
                                                }                          
                                                }
                                            
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" href="#">Profile</a></li> <!-- Optional Profile link -->
                                        <li><a class="dropdown-item" href="#">Settings</a></li> <!-- Optional Settings link -->
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="/Identity/Account/Logout">Logout</a></li>
                                    </ul>
                                </li>
                            </ul>


                        }
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Sbahle Events - <a asp-area="" asp-controller="Home" asp-action="AboutUS">About US</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
